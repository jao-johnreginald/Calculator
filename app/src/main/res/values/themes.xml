<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppBar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Button">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="Button.Operation">
        <item name="android:textColor">@color/orange</item>
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Button.Number">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Button.Equals">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_rowSpan">2</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />
</resources>